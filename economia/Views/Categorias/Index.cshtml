@model IEnumerable<economia.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
    var mensaje = TempData["MensajeCategoria"] as string;
}

<div class="container-fluid grow align-items-start mt-5">
    @if (!string.IsNullOrEmpty(mensaje))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h1>Categorías</h1>
    <hr />
    <table id="tableCategorias"
           data-toggle="table"
           data-search="true"
           data-searchable="true"
           data-sort-name="Monto"
           data-pagination="true"
           data-page-size="5"
           data-show-columns="true"
           class="table table-responsive mx-auto">
        <thead class="table-light">
            <tr>
                <th data-sortable="true">
                    Nombre
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th class="d-flex justify-content-center">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo.Nombre)
                    </td>
                    <td class="d-flex justify-content-center">
                        <a class="btn btn-warning text-white" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="Categorias" class="col-1 btn btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
        </svg>
        Crear
    </a>
     <a asp-action="Detalles" asp-controller="Gastos" class="col-1 btn btn-secondary">Regresar</a>
</div>

