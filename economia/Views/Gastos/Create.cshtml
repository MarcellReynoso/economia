@model economia.Models.ViewModels.GastoViewModel

@{
    ViewData["Title"] = "Create";
}



<div class="row align-items-center">
    <div class="col-6 align-items-center mx-auto">
        <div class="card-body p-4 p-lg-5 w-100">
            <h1>Generar nuevo gasto</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="Monto" class="control-label"></label>
                    <input 
                        asp-for="Monto" 
                        placeholder="Ingrese un monto"
                        class="form-control "/>
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input 
                        asp-for="Fecha" 
                        class="form-control"
                        value='@DateTime.Now.ToString("yyyy-MM-dd hh:mm")'
                        type="datetime-local"
                         />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" placeholder="(Opcional) Ingrese una descripción del movimiento" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select 
                        asp-for="CategoriaId" 
                        asp-items="ViewBag.CategoriaId"
                        class="form-select">
                        <option value="" disabled selected>Seleccione una categoría</option>
                    </select>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="MetodoId" class="control-label"></label>
                    <select asp-for="MetodoId" class="form-select" asp-items="ViewBag.MetodoId"> 
                        <option value="" disabled selected>Seleccione un método de pago</option>
                    </select>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="TipoId" class="control-label"></label>
                    <select asp-for="TipoId" class="form-select" asp-items="ViewBag.TipoId">
                        <option value="" disabled selected>Seleccione ingreso o gasto</option>
                    </select>
                </div>
                <div class="form-group mb-4">
                    <input type="submit" value="Registrar gasto" class="btn btn-primary" />
                    <a asp-action="Detalles" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-4">
        <img src="~/img/registrar-gastos.webp" style="width: 100%" />
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
